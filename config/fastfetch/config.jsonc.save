{ "$schema": "https://github.com/fastfetch-cli/fastfetch/raw/dev/doc/json_schema.json", "logo": {
   "padding": {
      "top": 2,
      "left": 1,
      "right": 2
    }
  },
  "display": {
    "separator": "  "
  },
  "modules": [
    // Title
    {
      "type": "title",
      "format": "{#1}╭───────────── {#separator}{user-name}"
    },
    // System Information
    {
      "type": "custom",
      "format": "{#1}│ {#1}System Information"
    },
    {
      "type": "os",
      "key": "{#separator}{#1}│  󰍹 OS"
    },
    {
      "type": "kernel",
      "key": "{#separator}{#1}│  󰒋 Kernel"
    },
    {
      "type": "uptime",
      "key": "{#separator}{#1}│  󰅐 Uptime"
    },
    {
      "type": "packages",
      "key": "{#separator}{#1}│  󰏖 Packages",
      "format": "{all}"
    },
    {
      "type": "custom",
      "format": "{#1}│"
    },
    // Desktop Environment
    {
      "type": "custom",
      "format": "{#1}│ {#1}Desktop Environment"
    },
    {
      "type": "de",
      "key": "{#separator}{#1}│  󰧨 DE"
    },
    {
      "type": "wm",
      "key": "{#separator}{#1}│  󱂬 WM"
    },
    {
      "type": "wmtheme",
      "key": "{#separator}{#1}│  󰉼 Theme"
    },
    {
      "type": "display",
      "key": "{#separator}{#1}│  󰹑 Resolution"
    },
    {

      "type": "shell",
      "key": "{#separator}{#1}│  󰞷 Shell"
    },
    {
      "type": "terminalfont",
      "key": "{#separator}{#1}│  󰛖 Font"
    },
    {
      "type": "custom",
      "format": "{#1}│"
    },
    // Hardware Information
    {
      "type": "custom",
      "format": "{#1}│ {#1}Hardware Information"
    },
    {
      "type": "cpu",
      "key": "{#separator}{#1}│  󰻠 CPU"
    },
    {
      "type": "gpu",
      "key": "{#separator}{#1}│  󰢮 GPU"
    },
    {
      "type": "memory",
      "key": "{#separator}{#1}│  󰍛 Memory"
    },
    {
      "type": "disk",
      "key": "{#separator}{#1}│  󰋊 Disk (/)",
      "folders": "/"
    },
    {
      "type": "disk",
      "key": "{#separator}{#1}│  󰋊 Disk (/home)",
      "folders": "/home"
    },
    {
      "type": "disk",
      "key": "{#separator}{#1}│  󰋊 Disk (/boot)",
      "folders": "/boot"
    },
    {
      "type": "custom",
      "format": "{#1}│"
    },
    // Colors
    {
      "type": "colors",
      "key": "{#separator}{#1}│",
      "symbol": "circle"
    },
    // Footer
    {
      "type": "custom",
      "format": "{#1}╰───────────────────────────────╯"
    }
  ]
}
